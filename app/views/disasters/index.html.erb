<h1>Exam Disaster Support System </h1>


<%= form_for @disaster do |f| %>

    <%= f.label :title%>
    <%= f.text_field :title%><br>

    <%= f.label :category_id, "Category" %>
    <%= f.select :category_id, Category.all.map{ |x| [x.category_name, x.id] }, :prompt => "Please Select" %><br>


    <%= f.label :content, "Content"%><br>
    <%= f.text_area :content%><br>

   <%= f.label :post_date%>
    <%= f.date_select :post_date, :required => true %> <br>

  <%= f.submit "create" %><br>
  <br>
<% end %>

	<% @disasters.each do |disaster| %>

 	<h4><%= link_to disaster.title, disaster_path(disaster) %></h4>
 	<h5>category: <%= disaster.category.category_name %></h5>
	<h5>content: <%= disaster.content %></h5>
	<h5>post date: <%= disaster.post_date %></h5>

		<% if disaster.user == current_user %>
			<%= link_to 'Edit', edit_disaster_path(disaster) %>
			
		<% else %>
		<% end %>

	<%= link_to 'Show', disaster_path(disaster) %>
	

<% end %><br>
<%= paginate @disasters %>